    "@commitlint/config-conventional": "^19.5.0",
    "@mikemajesty/microservice-crud": "6.1.17",
    "@nestjs/cli": "^10.4.7",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.8",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.9.2",
    "@swc/jest": "^0.2.37",
    "@testcontainers/mongodb": "^10.17.2",
    "@testcontainers/postgresql": "^10.17.2",
    "@testcontainers/redis": "^10.17.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.16",
    "@types/opossum": "^8.1.8",
    "@types/ping": "^0.4.4",
    "@types/supertest": "^6.0.2",
